<%= simple_form_for @reg_user do |f| %>
  <%= f.input :first_name, label: 'First name', error: 'Please enter your first name' %>
  <%= f.input :last_name, label: 'Last name', error: 'Please enter your last name' %>
  <%= f.input :email, label: 'Enter your email address' %>
  <%= f.input :school, label: 'What school do you go to?' %>
  <%= f.input :suburb, label: 'Enter your school\'s suburb' %>
  <%= f.input :contact_num, label: 'Best contact number' %>
  
  <%= f.button :submit %>
<% end %>